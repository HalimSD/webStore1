@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Account verwijderen";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>Uw account bevat persoonlijke informatie die u heeft gegeven. Op deze pagina kunt u uw persoonlijke informatie downloaden en uw account verwijderen.</p>
        <p>
            <strong>Deze actie verwijdert uw account permanent en is niet meer terug te halen</strong>
        </p>
        <form asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">Download</button>
        </form>
        <p>
            <a asp-page="DeletePersonalData" class="btn btn-primary">Verwijder account</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}