                                        }

                                    </div>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div id="pagination">
                <form class="form-inline my-2 my-lg-0" asp-action="Mainpage">
                    <input type="hidden" name="id" value="@(Model.pageindex - 1)">
                     <input type="hidden" name= "productsrt" value= "@(Model.currentCategoryName)">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Vorige</button>
                </form>
                <form class="form-inline my-2 my-lg-0" asp-action="Mainpage">
                    <input class="form-control" type="hidden" name="id" value="@(Model.pageindex + 1)">
                     <input type="hidden" name= "productsrt" value= "@(Model.currentCategoryName)">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Volgende</button>
                </form>
