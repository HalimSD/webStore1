@using WebApp1.Models.Database
<link rel="stylesheet" href="~/css/product_creation_generic.css">
<link rel="stylesheet" href="~/css/favorites.css">
<div class="pageRoot">
    <h2>Bestelling Details</h2>
    <strong>Verzendkosten: </strong>â‚¬@ViewBag.shippingFee
    <br>
    <table class="table">
        <thead>
        <tr>
            <th>
                Product Naam
            </th>
            <th>
                Product Prijs
            </th>
            <th>
                Product Kwantiteit
            </th>
            <th>
                Product Foto
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (OrderDetail item in ViewBag.besteldeItem)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                   <img src="~/images/products/@item.Image" width="60" id="productImage"><img/>
                </td>
            </tr>               
        }
        </tbody>
    </table>
</div>
