                                        }

                                    </div>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="pagination">
                @if (Model.Products.PageNumber == 1)
                {
                    <li class="page-item disabled">
                        <a class="page-link"  tabindex="-1">Vorige</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.Products.PageNumber - 1)">Vorige</a>
                    </li>
                }
                @for (int i = 0; i < Model.Products.TotalPages; i++)
                {
                    if ((i + 1) == Model.Products.PageNumber)
                    {
                        <li class="page-item active">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(i + 1)">@(i + 1) <span class="sr-only">current</span></a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" asp-action="Index" asp-route-pageNumber="@(i + 1)">@(i + 1)</a></li>
                    }
                }
                @if (Model.Products.PageNumber == Model.Products.TotalPages)
                {
                    <li class="page-item disabled">
                        <a class="page-link"  tabindex="-1">Volgende</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.Products.PageNumber + 1)">Volgende</a>
                    </li>
                }
            </div>
