
@{
    ViewData["Title"] = "Statistics";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<string[]> tableRows = ViewBag.chartTableRows;
}
<link rel="stylesheet" href="~/css/shopping_cart.css">
<div class="container">
    <h2>Overzicht</h2>
    Op deze pagina kun je statistieken zien die gerelateerd zijn aan de producten<br />
    <hr>
    <div class="row">
        <div class="col-6">
            Toon resultaten vanaf: <select id="categoryChartRange"></select>
            <div id="chart1"></div>
        </div>
        <div class="col-6">
            Toon resultaten vanaf: <select id="totalChartRange"></select>
            <div id="chart2"></div>
        </div>
    </div>
    <br>
    <h2>Algemene Statistieken</h2>
    <hr>
    <table id="table" style="border-radius: 3px;">
        <thead>
        <tr>
            <th>
                Statistiek
            </th>
            <th>
                Waarde
            </th>
        </tr>
        </thead>
        <tbody id="">
        @foreach (string[] row in tableRows)
        {
            <tr>
                <td>
                    @row[0]
                </td>            
                <td>
                    @row[1]
                </td>
            </tr>
        }
        </tbody>
    </table>
    <br>
    <h2>Producten met lage voorraad</h2>
    <hr>
    <div>
        <table id="table" style="border-radius: 3px;">
            <thead>
            <tr>
                <th>
                    <input id="filterId" type="text" class="form-control" placeholder="Filteren bij ID">
                </th>
                <th>
                    <input id="filterName" type="text" class="form-control" placeholder="Filteren bij Naam">
                </th>
                <th>
                    <input id="filterStock" type="text" class="form-control" placeholder="Kleiner/gelijk dan: 10">
                </th>
                <th>
                    <input id="filterCategory" type="text" class="form-control" placeholder="Filteren bij Categorie">
                </th>
                <th>
                
                </th>
            </tr>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Naam
                </th>
                <th>
                    Voorraad
                </th>
                <th>
                    Categorie
                </th>
                <th>
                    Opties
                </th>
            </tr>
            </thead>
            <tbody id="tableBody">
            </tbody>
        </table>
        <ul id="pagination" class="pagination flex-wrap" style="margin-top: 10px;">
        </ul>
        <div id="popover-content" style="display: none;">
        </div>
    </div>
</div>
<style>
    div.container {
        background-color: #ffffff;
        border-radius: 3px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        padding: 15px;
    }
        
    div.col-md-6 {

        width: 100%;
        display: inline-block;
    }
    #chart1 {

        float: left;
    }
    #chart2 {
        float: right;
    }
</style>
@section scripts{
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="module" src="~/js/statisticsPage.js"></script>
}
