@using WebApp1.Models
@model WebApp1.Models.Productwaarde
<link rel="stylesheet" href="~/css/shopping_cart.css">
<div class="pageRoot">
    <h3>Cart Page</h3>
    <hr>
    <table cellpadding="2" cellspacing="2" border="1" id="table">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Photo</th>
            <th></th>
            <th>Sub Total</th>
        </tr>
        @foreach (var item in ViewBag.cart)
        {
            <tr>
                <td>@item.Product.Id</td>
                <td>@item.Product.Title</td>
                <td>@item.Quantity</td>
                <td>@item.Product.Price</td>
                <td><img src="~/images/products/@item.Product.Image" width="60" id="productImage"><img/></td>
                <td><a  asp-controller="cart" asp-action="Remove" asp-route-id="@item.Product.Id" >Delete</a></td>
                <td>@(item.Product.Price * item.Quantity)</td>
            </tr>
        }
        <tr>
            <td align="right" colspan="6">Sum</td>
            <td>
                @ViewBag.total
            </td>
        </tr>
    </table>
    <br>
    <a asp-controller="Home" asp-action="index">Continue Shopping</a>
    <br>
    <a asp-controller="cart" asp-action="CreatePDF">checkOut</a>
</div>

