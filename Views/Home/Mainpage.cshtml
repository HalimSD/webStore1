@using WebApp1.Models
@using WebApp1.Mainpage
@model WebApp1.Mainpage.Mainpage;

@{
    ViewData["Title"] = "Producten pagina";

    // The code below is used to populate the product page
    // The product page itself consists of 3 columns
    // We must first sort all the products into each column    
    // Afterwards, we populate the page
    List<Productwaarde> col0Items = new List<Productwaarde>();
    List<Productwaarde> col1Items = new List<Productwaarde>();
    List<Productwaarde> col2Items = new List<Productwaarde>();
    
    int currentColumn = 0;
    foreach (Productwaarde item in Model.Page())
    {
        switch (currentColumn)
        {
            case 0:
                col0Items.Add(item);
                currentColumn++;
                break;
            case 1:
                col1Items.Add(item);
                currentColumn++;
                break;
            case 2:
                col2Items.Add(item);
                // Since this is the last column, we reset back to first column
                currentColumn = 0;
                break;
        }
    }
 }

<link rel="stylesheet" href="~/css/mainpage.css">
<div class="row">
    <div class="col-2">
        <div id="categoryArea">
            <div class="categoryTitle">Categorieën</div>
            <hr>
            <form asp-action="Mainpage">
                <div id="categoryFormContent" class = "checkbox checkboxlist">
                    @for (var i = 0; i < Model.productsoortfilters.Count; i++)
                    {
                        <input type="checkbox" asp-for="@Model.productsoortfilters[i].selected"  />@Model.productsoortfilters[i].Productsoorts.Naam
                        <input type="hidden" asp-for="@Model.productsoortfilters[i].Productsoorts.Naam" /> <br>
                        <hr>                                                                                  
                    }
                    <button class="btn btn-outline-success" type="submit">Filter</button>
                </div>
            </form>
            <div>
                <a asp-action="Mainpage">Terug naar alle producten</a>
            </div>
        </div>
    </div>
    <div class="col-10">
        <div class="container" id="productsArea">
            <h2>@("U bekijkt nu: " + Model.currentCategoryName)</h2>
            <h4>Producten</h4>
            <div class="row" id="products">
                <div class="col-sm">
                    @foreach (Productwaarde item in col0Items)
                    {
                        <div class="card" style="width: 20rem;">
                            <div class="card-body">
                                <form action="@Url.Action("Index", "ViewProduct")" method="get">
                                    <div id="container" class="form-group">
                                        <img src="@("/images/products/" + item.Image)" id="productImage"><img/>
                                        <h5 class="card-title">@item.Title</h5>
                                        <div>
                                            @if (item.DiscountedPrice != -1)
                                            {
                                                <div class="row">
                                                    <div class="col-4-sm">
                                                        <div id="disabledPrice">€ @item.Price</div>
                                                    </div>
                                                    <div class="col-4-sm" style="margin-left: 15px;">
                                                        <div id="discountPrice">NU VOOR: € @item.DiscountedPrice</div>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div>€ @item.Price</div>
                                            }
                                            @if (item.Quantity > 0)
                                            {
                                                <div>@string.Format("Voorraad: {0} stuk(ken)",item.Quantity)</div>
                                            }
                                            else
                                            {
                                                <div id="outOfStock">Geen voorraad beschikbaar!</div>
                                            }
                                        </div>
                                        <input type="hidden" name="id" value='@item.Id'/>
                                        <input type="submit" class="btn btn-primary" value="Details">
                                        @if (item.Quantity > 0)
                                        {
                                            <input type="submit" class="btn btn-primary" value="Zet in winkelwagen" asp-controller="cart" asp-action="buy" asp-route-id="@item.Id" >
                                        }
                                    </div>
                                </form>
                            </div>
                        </div>
                    }
                </div>
